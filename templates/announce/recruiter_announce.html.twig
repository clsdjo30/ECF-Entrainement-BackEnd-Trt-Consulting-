{% extends 'base.html.twig' %}

{% block title %}Espace Candidat{% endblock %}

{% block content %}

    <div class="banner  container-xl px-4 mt-4">
        <!-- Account page navigation-->
        <nav class="nav nav-borders">
            <a class="nav-link active ms-0"
               href="{{ path('app_recruiter_details', {id: app.user.recruiter.id}) }}">
                Mon Profil
            </a>
            <a class="nav-link text-capitalize"
               href="{{ path('app_announce_recruiter', {id: app.user.recruiter.id}) }}">
                mes annonces
            </a>
            <a class="nav-link text-capitalize"
               href="{{ path('app_announce_new') }}">
                Publier une Annonce
            </a>
            <a class="nav-link text-capitalize"
               href="#">
                Voir les Candidatures
            </a>
        </nav>
        <hr class="mt-0 mb-4">
        <div class="col">
            <div class="row row-cols-1 row-cols-md-2 g-4">
                {% for announce in announces %}
                    <div class="col">
                        <div class="card border-primary">
                            <div class="card-header">
                                <h2 class="display-5 ">
                                    {{ announce.category }}
                                </h2>
                                <h4 class="card-title fs-3">
                                    {{ app.user.recruiter.companyName }}
                                </h4>
                                <p class="fs-5">  {{ app.user.recruiter.address }}

                                    {{ app.user.recruiter.postalCode }} - {{ app.user.recruiter.city }}
                                    <br>
                                    {{ app.user.recruiter.country }}
                                </p>
                                <h5>
                                    {{ announce.title }}
                                </h5>

                                <p class="fs-5 fst-italic">
                                    publiée le : {{ announce.createdAt | date('d-m-Y') }}
                                </p>
                            </div>
                            <div class="card-body text-secondary fs-5">

                                <h5 class="card-title">
                                    Description
                                </h5>
                                <p class="card-text">
                                    {{ announce.description }}
                                </p>
                                <ul>
                                    <li>
                                        {{ announce.experience }} sur le même type de poste
                                    </li>
                                    <li>
                                        {{ announce.hourly }}
                                    </li>
                                    <li>
                                        Avantages : {{ announce.benefits }}
                                    </li>
                                    <li>
                                        Salaire : {{ announce.salary }}
                                    </li>
                                </ul>
                            </div>
                            <div class="card-footer d-flex justify-content-start">
                                <h5>
                                    contact : {{ app.user.email }}
                                </h5>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

        </div>

    </div>

{% endblock %}
