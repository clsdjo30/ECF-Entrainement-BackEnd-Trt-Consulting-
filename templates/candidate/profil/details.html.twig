{% extends 'base.html.twig' %}

{% block title %}
    Mes Informations
{% endblock %}

{% block content %}

    <div class="container-xl px-4 mt-5">
        {{ include('candidate/profil/_profil_candidate_navigation.html.twig') }}
        <!-- Account page navigation-->
        <div class="row">
            <div class="col-xl-4">
                <!-- Profile picture card-->
                <div class="card mb-4 mb-xl-0">
                    <div class="card-header">Photo de profil</div>
                    <div class="card-body text-center">
                        <img class="img-account-profile rounded-circle mb-2"
                             src="{{ asset('build/images/profil_image.PNG') }}"
                             alt="">
                        <button class="btn btn-primary" type="button">Changer de photo de profil</button>
                    </div>
                </div>
            </div>
            <div class="col-xl-8">
                <!-- Account details card-->
                <div class="card mb-4">
                    <div class="card-header">Mes informations</div>
                    <div class="card-body">

                        <!-- Form Group (email address)-->
                        <div class="mb-3">
                            <p class="small mb-1">Email : {{ app.user.email }}</p>
                        </div>

                        <form>
                            <!-- Form Row-->
                            <div class="row gx-3 mb-3">
                                <!-- Form Group (FirstName)-->
                                <div class="col-md-6">

                                    <label class="small mb-1" for="inputFirstName">Prénom</label>
                                    <input class="form-control" id="inputFirstName" type="text"
                                           placeholder="Prénom" disabled
                                           value="{{ app.user.candidate.firstname }}">
                                </div>
                            </div>
                            <!-- Form Row        -->
                            <div class="row gx-3 mb-3">
                                <!-- Form Group (LastName)-->
                                <div class="col-md-6">
                                    <label class="small mb-1" for="inputOrgName">Nom de famille</label>
                                    <input class="form-control" id="inputOrgName" type="text"
                                           placeholder="Nom de famille" disabled
                                           value="{{ app.user.candidate.lastname }}">
                                </div>
                            </div>
                            <!-- Form Row-->
                            <div class="row gx-3 mb-3">
                                <!-- Form Group (Cv File)-->
                                <div class="col-md-6">
                                    <label class="small mb-1" for="inputPhone">Mon Cv</label>
                                    <input class="form-control" id="inputPhone" type="tel"
                                           placeholder="Téléchargez votre CV au format Pdf" disabled
                                           value="{{ app.user.candidate.cvFile }}">

                                </div>

                            </div>
                            <!-- Save changes button-->
                            <div class="d-flex justify-content-end">
                                <button class="btn btn-primary mt-3" type="button">
                                    <a
                                            class="text-white text-decoration-none"
                                            href="{{ path('app_candidate_edit', {id: app.user.candidate.id}) }}">
                                        Mettre à jour mon Profil
                                    </a>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


