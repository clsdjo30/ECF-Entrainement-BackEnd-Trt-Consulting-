{% extends 'base.html.twig' %}

{% block title %}
    Mes Informations
{% endblock %}

{% block content %}

    <div class="container-xl px-4 mt-4">
        <!-- Account page navigation-->
        <nav class="nav nav-borders">
            <a class="nav-link active ms-0"
               href="{{ path('app_recruiter_details', {id: app.user.recruiter.id}) }}" target="__blank">
                Mon Profil
            </a>
            <a class="nav-link text-capitalize"
               href="#">
                mes annonces
            </a>
            <a class="nav-link text-capitalize"
               href="#" target="__blank">
                les candidatures
            </a>

        </nav>
        <hr class="mt-0 mb-4">
        <div class="row">
            <div class="col-xl-4">
                <!-- Profile picture card-->
                <div class="card mb-4 mb-xl-0">
                    <div class="card-header">Profil</div>
                    <div class="card-body text-center">
                        <!-- Profile picture image-->
                        <img class="img-account-profile rounded-circle mb-2"
                             src=""
                             alt="">
                        <!-- Profile picture help block-->
                        <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                        <!-- Profile picture upload button-->
                        <button class="btn btn-primary" type="button">Upload new image</button>
                    </div>
                </div>
            </div>
            <div class="col-xl-8">
                <!-- Account details card-->
                <div class="card mb-4">
                    <div class="card-header">Mes informations</div>
                    <div class="card-body">

                        <form>
                            <!-- Form Row-->
                            <div class="row gx-3 mb-3">
                                <!-- Form Group (User email)-->
                                <div class="col-md-6">
                                    <label class="small mb-1" for="inputFirstName">Email</label>
                                    <input class="form-control" id="inputFirstName" type="text"
                                           placeholder="Enter your first name"
                                           value="{{ app.user.email }}"
                                           disabled>
                                </div>
                                <!-- Form Group (CompanyName)-->
                                <div class="col-md-6">
                                    <label class="small mb-1" for="inputFirstName">Nom de l'établissement</label>
                                    <input class="form-control" id="inputFirstName" type="text"
                                           placeholder="Enter your first name"
                                           value="{{ app.user.recruiter.companyName }}"
                                           disabled>
                                </div>
                            </div>

                            <!-- Form Row-->
                            <div class="row gx-3 mb-3">
                                <!-- Form Group (Address)-->
                                <div class="col-md-6">
                                    <label class="small mb-1" for="inputPhone">Adresse</label>
                                    <input class="form-control" id="inputPhone" type="tel"
                                           placeholder="Enter your phone number"
                                           value="{{ app.user.recruiter.address }}"
                                           disabled>
                                </div>
                            </div>
                            <!-- Form Row-->
                            <div class="row gx-3 mb-3">
                                <!-- Form Group (City)-->
                                <div class="col-md-4">
                                    <label class="small mb-1" for="inputPhone">Ville</label>
                                    <input class="form-control" id="inputPhone" type="tel"
                                           placeholder="Enter your phone number"
                                           value="{{ app.user.recruiter.city }}"
                                           disabled>
                                </div>
                                <!-- Form Group (Postal Code)-->
                                <div class="col-md-4">
                                    <label class="small mb-1" for="inputPhone">Code Postal</label>
                                    <input class="form-control" id="inputPhone" type="tel"
                                           placeholder="Enter your phone number"
                                           value="{{ app.user.recruiter.postalCode }}"
                                           disabled>
                                </div>
                                <!-- Form Group (Country)-->
                                <div class="col-md-4">
                                    <label class="small mb-1" for="inputPhone">Pays</label>
                                    <input class="form-control" id="inputPhone" type="tel"
                                           placeholder="Enter your phone number"
                                           value="{{ app.user.recruiter.country }}"
                                           disabled>
                                </div>
                            </div>
                            <!-- Save changes button-->
                            <div class="d-flex justify-content-end">
                                <button class="btn btn-primary mt-3" type="button">
                                    <a
                                            class="text-white text-decoration-none"
                                            href="{{ path('app_recruiter_edit', {id: app.user.recruiter.id}) }}">
                                        Mettre à jour mon Profil
                                    </a>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}




